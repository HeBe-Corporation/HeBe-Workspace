{
  "name": "oliveyoung-analyzer",
  "version": "1.0.0",
  "description": "올리브영 리뷰 분석기 - GUI 앱",
  "main": "dist/main.js",
  "author": "HeBe",
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp src/index.html dist/index.html",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.hebe.oliveyoung-analyzer",
    "productName": "올리브영 리뷰 분석기",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "portable",
      "signAndEditExecutable": false
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^25.9.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  }
}
